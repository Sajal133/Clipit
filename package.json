{
    "name": "clipit",
    "version": "1.0.0",
    "description": "Clipboard manager for macOS and Windows",
    "main": "dist/main/main.js",
    "scripts": {
        "build:main": "tsc",
        "build:renderer": "webpack --config webpack.config.js",
        "build": "npm run build:main && npm run build:renderer",
        "start": "npm run build && electron .",
        "dev": "npm run build && electron .",
        "pack:mac": "npm run build && electron-builder --mac",
        "pack:win": "npm run build && electron-builder --win"
    },
    "keywords": [
        "clipboard",
        "productivity",
        "electron"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "sql.js": "^1.10.3"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/react": "^19.2.9",
        "@types/react-dom": "^19.2.3",
        "@types/sql.js": "^1.4.9",
        "css-loader": "^7.1.2",
        "electron": "^28.0.0",
        "electron-builder": "^24.0.0",
        "html-webpack-plugin": "^5.6.6",
        "style-loader": "^4.0.0",
        "ts-loader": "^9.5.4",
        "typescript": "^5.0.0",
        "webpack": "^5.104.1",
        "webpack-cli": "^6.0.1"
    },
    "build": {
        "appId": "com.clipit.app",
        "productName": "Clipit",
        "files": [
            "dist/**/*",
            "package.json"
        ],
        "directories": {
            "output": "release"
        },
        "mac": {
            "category": "public.app-category.productivity",
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "universal"
                    ]
                },
                {
                    "target": "zip",
                    "arch": [
                        "universal"
                    ]
                }
            ]
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                },
                {
                    "target": "portable",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ]
        },
        "dmg": {
            "contents": [
                {
                    "x": 130,
                    "y": 220
                },
                {
                    "x": 410,
                    "y": 220,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        }
    }
}